---
interface Props {
  title: string;
  category: string;
  date: Date;
  href: string;
  image: string;
}

const { title, category, date, href, image } = Astro.props;

function formatDate(date: Date) {
  return date.toLocaleDateString("en-US", {
    month: "short",
    day: "2-digit",
    year: "numeric",
  });
}
---

<a href={href} class="card bg-base-100 shadow-xl h-full">
  <figure class="relative h-48 overflow-hidden">
    <img
      src={image}
      alt={title}
      class="w-full h-full object-cover hover:scale-105 transition-all duration-300"
    />
  </figure>
  <div class="card-body p-4">
    <div class="flex items-center gap-2 mb-2">
      <span class="badge badge-primary">{category}</span>
      <span class="text-sm opacity-70">{formatDate(date)}</span>
    </div>
    <h3
      class="card-title text-lg font-semibold line-clamp-2 hover:text-primary transition-colors"
    >
      {title}
    </h3>
  </div>
</a>
