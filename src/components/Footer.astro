---
import logoPrincipal from "../assets/images/logoSecundario.png";
const today = new Date();
---

<footer class="bg-[#1a4162] text-white py-20">
  <!-- Información de contacto -->
  <div class="container mx-auto max-w-7xl px-4">
    <div
      class="grid grid-cols-1 md:grid-cols-3 gap-8 items-center justify-between mb-16"
    >
      <!-- Teléfono -->
      <div
        class="flex items-center gap-4"
        data-aos="fade-up"
      >
        <div
          class="w-12 h-12 rounded-full border-2 border-dashed border-[#f6d397] flex items-center justify-center"
        >
          <img src="https://img.icons8.com/?size=128&id=42839&format=png" alt="icono telefono" class="w-8 h-8">
        </div>
        <div>
          <p class="text-gray-400 text-sm">Llámanos 24/7</p>
          <p class="font-semibold">+51 922 935 447</p>
        </div>
      </div>

      <!-- Email -->
      <a
        href="https://wa.me/51922935447"
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center gap-4 cursor-pointer group relative"
        data-aos="fade-up"
      >
        <div
          class="w-12 h-12 rounded-full border-2 border-dashed border-[#72caaf] flex items-center justify-center"
        >
          <img src="https://img.icons8.com/?size=128&id=42961&format=png" alt="icono whatsapp" class="w-8 h-8">
        </div>
        <div>
          <p class="text-gray-400 text-sm">Escríbenos - WhatsApp</p>
          <p class="font-semibold">+51 922 935 447</p>
        </div>
        
        <!-- Tooltip -->
        <div class="absolute bottom-full left-1/3 transform -translate-x-1/2 mb-2 px-3 py-2 bg-black text-white text-sm rounded-lg opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none whitespace-nowrap z-10">
          ¡Escríbenos, estamos disponibles!
          <!-- Flecha del tooltip -->
          <div class="absolute top-full left-1/2 transform -translate-x-1/2 border-4 border-transparent border-t-black"></div>
        </div>
      </a>

      <!-- Ubicación -->
      <div
        class="flex items-center gap-4"
        data-aos="fade-up"
      >
        <div
          class="w-12 h-12 rounded-full border-2 border-dashed border-[#ed7899] flex items-center justify-center"
        >
          <img src="https://img.icons8.com/?size=128&id=42814&format=png" alt="icono ubicación" class="w-8 h-8">
        </div>
        <div>
          <p class="text-gray-400 text-sm">Ubicación</p>
          <p class="font-semibold">Av. Agustín de la Rosa Toro 900, San Luis, Lima</p>
        </div>
      </div>
    </div>

    <!-- Logo y horarios -->
    <div
      class="grid md:grid-cols-4 gap-8 pb-12 border-b border-gray-500"
      data-aos="fade-up"
    >
      <div class="md:col-span-1">
        <div class="flex items-center gap-2 mb-6">
          <img src={logoPrincipal.src} alt="Logo" class="h-10" />
        </div>
        <p class="text-lg font-semibold mb-2">Horario de atención:</p>
        <p class="text-gray-400">Lunes a Viernes: 7:00 AM - 6:00 PM</p>
        <p class="text-gray-400">Sábado: 8:00 AM - 4:00 PM</p>
      </div>

      <!-- Enlaces -->
      <div>
        <h3 class="text-xl font-bold mb-4">Institución</h3>
        <ul class="space-y-2">
          <li><a href="/" class="text-gray-400 hover:text-white">Inicio</a></li>
          <li>
            <a href="/about" class="text-gray-400 hover:text-white">Nosotros</a>
          </li>
          <li>
            <a href="/services" class="text-gray-400 hover:text-white"
              >Servicios</a
            >
          </li>
          <li>
            <a href="/infrastructure" class="text-gray-400 hover:text-white"
              >Infraestructura</a
            >
          </li>
        </ul>
      </div>

      <div>
        <h3 class="text-xl font-bold mb-4">Enlaces rápidos</h3>
        <ul class="space-y-2">
          <li>
            <a href="/contact" class="text-gray-400 hover:text-white"
              >Contacto</a
            >
          </li>
          <li>
            <a href="/blog" class="text-gray-400 hover:text-white">Blog</a>
          </li>
          <li><a href="/faq" class="text-gray-400 hover:text-white">FAQ</a></li>
        </ul>
      </div>

      <div>
        <h3 class="text-xl font-bold mb-4">Utilidades</h3>
        <ul class="space-y-2">
          <li>
            <a href="/privacy" class="text-gray-400 hover:text-white"
              >Política de privacidad</a
            >
          </li>
          <li><a href="/404" class="text-gray-400 hover:text-white">404</a></li>
        </ul>
      </div>
    </div>

    <!-- Redes sociales y copyright -->
    <div
      class="flex flex-col md:flex-row justify-between items-center pt-8"
      data-aos="fade-up"
    >
      <div class="flex gap-4 mb-4 md:mb-0">
        <a
          href="https://www.facebook.com/NidoPerulina"
          target="_blank"
          class="text-gray-400 hover:text-white"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path
              d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"
            ></path>
          </svg>
        </a>

        <a
          href="https://www.instagram.com/nidoperulina/"
          target="_blank"
          class="text-gray-400 hover:text-white"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
            <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
            <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
          </svg>
        </a>
      </div>
      <p class="text-gray-400 text-sm">
        © Copyright {today.getFullYear()}. Todos los derechos reservados por
        Nido Perulina
      </p>
    </div>
  </div>
  <div class="text-center text-lg mt-10 text-gray-400">
    Desarrollado por <a
      href="https://groblesolutions.netlify.app/"
      class="text-white underline">Grobles Solutions</a
    >
  </div>
</footer>
