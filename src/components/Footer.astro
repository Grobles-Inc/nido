---
import logoPrincipal from "../assets/images/logoSecundario.png";
const today = new Date();
---

<footer class="bg-[#1a4162] text-white py-20 mt-32">
  <!-- Información de contacto -->
  <div class="container mx-auto max-w-7xl px-4">
    <div
      class="grid grid-cols-1 md:grid-cols-3 gap-8 items-center justify-between mb-16"
    >
      <!-- Teléfono -->
      <div class="flex items-center gap-4">
        <div
          class="w-12 h-12 rounded-full border-2 border-dashed border-purple-400 flex items-center justify-center"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="text-purple-400"
          >
            <path
              d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
            ></path>
          </svg>
        </div>
        <div>
          <p class="text-gray-400 text-sm">Llámanos 24/7</p>
          <p class="font-semibold">+51 987 654 321</p>
        </div>
      </div>

      <!-- Email -->
      <div class="flex items-center gap-4">
        <div
          class="w-12 h-12 rounded-full border-2 border-dashed border-yellow-400 flex items-center justify-center"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="text-yellow-400"
          >
            <path
              d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"
            ></path>
            <polyline points="22,6 12,13 2,6"></polyline>
          </svg>
        </div>
        <div>
          <p class="text-gray-400 text-sm">Escríbenos</p>
          <p class="font-semibold">nidoperulinas@gmail.com</p>
        </div>
      </div>

      <!-- Ubicación -->
      <div class="flex items-center gap-4">
        <div
          class="w-12 h-12 rounded-full border-2 border-dashed border-orange-400 flex items-center justify-center"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="text-orange-400"
          >
            <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
            <polyline points="9 22 9 12 15 12 15 22"></polyline>
          </svg>
        </div>
        <div>
          <p class="text-gray-400 text-sm">Ubicación</p>
          <p class="font-semibold">Av. Los Incas 123, Cusco</p>
        </div>
      </div>
    </div>

    <!-- Logo y horarios -->
    <div class="grid md:grid-cols-4 gap-8 pb-12 border-b border-gray-500">
      <div class="md:col-span-1">
        <div class="flex items-center gap-2 mb-6">
          <img src={logoPrincipal.src} alt="Logo" class="h-10" />
        </div>
        <p class="text-lg font-semibold mb-2">Horario de atención:</p>
        <p class="text-gray-400">Lunes a Viernes: 7:00 AM - 6:00 PM</p>
        <p class="text-gray-400">Sábado: 8:00 AM - 4:00 PM</p>
      </div>

      <!-- Enlaces -->
      <div>
        <h3 class="text-xl font-bold mb-4">Compañía</h3>
        <ul class="space-y-2">
          <li><a href="/" class="text-gray-400 hover:text-white">Inicio</a></li>
          <li>
            <a href="/about" class="text-gray-400 hover:text-white">Nosotros</a>
          </li>
          <li>
            <a href="/services" class="text-gray-400 hover:text-white"
              >Servicios</a>
          </li>
          <li>
            <a href="/pricing" class="text-gray-400 hover:text-white"
              >Precios</a>
          </li>
        </ul>
      </div>

      <div>
        <h3 class="text-xl font-bold mb-4">Enlaces rápidos</h3>
        <ul class="space-y-2">
          <li>
            <a href="/contact" class="text-gray-400 hover:text-white"
              >Contacto</a>
          </li>
          <li>
            <a href="/blog" class="text-gray-400 hover:text-white">Blog</a>
          </li>
          <li><a href="/faq" class="text-gray-400 hover:text-white">FAQ</a></li>
        </ul>
      </div>

      <div>
        <h3 class="text-xl font-bold mb-4">Utilidades</h3>
        <ul class="space-y-2">
          <li>
            <a href="/terms" class="text-gray-400 hover:text-white"
              >Términos de uso</a>
          </li>
          <li>
            <a href="/privacy" class="text-gray-400 hover:text-white"
              >Política de privacidad</a>
          </li>
          <li><a href="/404" class="text-gray-400 hover:text-white">404</a></li>
        </ul>
      </div>
    </div>

    <!-- Redes sociales y copyright -->
    <div class="flex flex-col md:flex-row justify-between items-center pt-8">
      <div class="flex gap-4 mb-4 md:mb-0">
        <a href="#" class="text-gray-400 hover:text-white">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path
              d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"
            ></path>
          </svg>
        </a>
        <a href="#" class="text-gray-400 hover:text-white">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path
              d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"
            ></path>
          </svg>
        </a>
        <a href="#" class="text-gray-400 hover:text-white">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
            <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
            <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
          </svg>
        </a>
        <a href="#" class="text-gray-400 hover:text-white">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path
              d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"
            ></path>
          </svg>
        </a>
      </div>
      <p class="text-gray-400 text-sm">
        © Copyright {today.getFullYear()}. Todos los derechos reservados por
        Nido Perulinas
      </p>
    </div>
  </div>
  <div class="text-center text-lg mt-10 text-gray-400">
    Desarrollado por <a
      href="https://grobles.framer.website/"
      class="text-white underline">Grobles Labs.</a
    >
  </div>
</footer>
