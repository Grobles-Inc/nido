<section class="py-16 px-4 bg-white max-w-7xl mx-auto">
  <div class="container mx-auto grid md:grid-cols-2 gap-12 items-center">
    <div class="col_1">
      <div data-aos="fade-up">
        <h2 class="text-secondary uppercase text-lg font-medium mb-4">
          Sobre Nosotros
        </h2>

        <h3 class="text-4xl md:text-5xl font-bold text-primary mb-6">
          Comprometidos con el Crecimiento de tu Hijo
        </h3>

        <p class="mb-8 leading-7 text-xl">
          <span class="font-bold">Nido Perulina</span> es una institución educativa
          infantil que forma parte del grupo <span class="font-bold"
            >Iberoamericano para el desarrollo de los niños</span
          >, fundada por el Sr. Iván Tello Carbajal. Inspirado en el personaje
          de la literatura infantil "Perulina", el nido busca brindar una
          educación de excelencia a través de su programa pedagógico exclusivo
          "PRODIGIE".
        </p>
      </div>

      <div class="flex flex-col md:flex-row gap-8">
        <div class="bg-lavender rounded-xl p-8 text-primary" data-aos="fade-up">
          <div class="text-4xl font-bold counter" data-target="30">0</div>
          <p>
            Años de experiencia comprobada<br />
            en el cuidado infantil.
          </p>
        </div>

        <div class="bg-cream rounded-xl p-8 text-primary" data-aos="fade-up">
          <div class="text-4xl font-bold counter" data-target="1500">0</div>
          <p>
            Familias felices<br />
            utilizando nuestros servicios.
          </p>
        </div>
      </div>
    </div>

    <div
      class="relative h-full flex justify-center items-center"
      data-aos="fade-up"
    >
      <img
        src="https://i.ibb.co/9kGwtK8c/Dise-os-Perulina.webp"
        alt="Niños aprendiendo"
        class="h-[250px] md:h-[450px] w-full md:w-[900px] object-cover"
      />
    </div>
  </div>
</section>

<script>
  const animateCounter = (element: HTMLElement) => {
    const target = parseInt(element.getAttribute("data-target") || "0");
    let current = 0;

    const updateCounter = () => {
      const increment = target / 150;
      current = Math.min(current + increment, target);
      element.innerText = Math.floor(current) + "+";

      if (current < target) {
        requestAnimationFrame(updateCounter);
      }
    };

    updateCounter();
  };

  const isInViewport = (element: Element) => {
    const rect = element.getBoundingClientRect();
    return (
      rect.top >= 0 &&
      rect.left >= 0 &&
      rect.bottom <=
        (window.innerHeight || document.documentElement.clientHeight) &&
      rect.right <= (window.innerWidth || document.documentElement.clientWidth)
    );
  };

  const startCounterAnimations = () => {
    const counterSection = document.querySelector(
      ".flex.flex-col.md\\:flex-row.gap-8",
    );
    if (counterSection && isInViewport(counterSection)) {
      const counters = counterSection.querySelectorAll(".counter");
      counters.forEach((counter) => {
        animateCounter(counter as HTMLElement);
      });
      window.removeEventListener("scroll", startCounterAnimations);
    }
  };

  window.addEventListener("scroll", startCounterAnimations);
  document.addEventListener("DOMContentLoaded", startCounterAnimations);
</script>

<style>
  .bg-lavender {
    background-color: #f8f0ff;
  }
  .bg-cream {
    background-color: #fff9e6;
  }
</style>
