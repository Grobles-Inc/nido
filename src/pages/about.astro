---
import { Image } from "astro:assets";
import AwardsSection from "../components/AwardsSection.astro";
import BaseHead from "../components/BaseHead.astro";
import CTASection from "../components/CTASection.astro";
import Footer from "../components/Footer.astro";
import GoogleTagManager from "../components/GoogleTagManager.astro";
import GoogleTagManagerNoScript from "../components/GoogleTagManagerNoScript.astro";
import Header from "../components/Header.astro";
import TeachersSection from "../components/TeachersSection.astro";
---

<!doctype html>
<html lang="es" data-theme="nido">
	<head>
		<meta charset="UTF-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.png" />
		<BaseHead
			title="Sobre Nosotros"
			description="Ofrecemos un espacio seguro y estimulante donde los niños crecen emocional, social e intelectualmente."
		/>
		<GoogleTagManager />
	</head>
	<body class="bg-white">
		<Header />
		<!-- Hero Section -->
		<section
			class="relative h-[70vh] flex items-center justify-center overflow-hidden"
		>
			<!-- Fondo con overlay -->
			<div
				class="absolute inset-0 bg-cover bg-center bg-no-repeat"
				style="background-image: url('https://i.ibb.co/BRjnGr1/IMG-9447.webp');"
			>
				<div class="absolute inset-0 bg-black/50"></div>
			</div>

			<!-- Contenido del banner -->
			<div
				class="relative z-10 text-center px-4"
				data-aos="zoom-in"
				data-aos-delay="100"
			>
				<h1 class="text-6xl md:text-[86px] font-bold text-white mb-6">
					Sobre Nosotros
				</h1>
				<p class="text-lg text-white/90 max-w-2xl mx-auto">
					Ofrecemos un espacio seguro y estimulante donde los niños crecen
					emocional, social e intelectualmente.
				</p>
			</div>
		</section>

		<section class="md:py-16 md:px-16 px-6 bg-white mx-auto mt-16">
			<div class="container mx-auto grid md:grid-cols-2 items-center">
				<div data-aos="fade-up">
					<h3 class="text-4xl md:text-6xl font-bold mb-8 text-primary">
						¿Quiénes somos?
					</h3>

					<p class="mb-8 text-secondary leading-7">
						<span class="font-bold">Nido Perulina</span> es una institución educativa
						infantil que forma parte del grupo <span class="font-bold"
							>Iberoamericano para el desarrollo de los niños</span
						>, fundada por el Sr. Iván Tello Carbajal. Inspirado en el personaje
						de la literatura infantil "Perulina", el nido busca brindar una
						educación de excelencia a través de su programa pedagógico exclusivo
						"PRODIGIE".
					</p>
					<a href="/contact" class="btn btn-neutral text-primary btn-xl"
						>Contáctanos</a
					>
				</div>
				<img
					src="https://i.ibb.co/WvzVnhqq/Dise-os-Perulina-2.png"
					alt="Niños jugando y aprendiendo"
					class="my-20 md:my-0"
				/>
			</div>
		</section>

		<section class="bg-accent">
			<div
				class="container mx-auto md:py-28 py-16 flex flex-wrap flex-col md:flex-row justify-center md:gap-36 gap-16 text-center"
			>
				<div class="flex flex-col items-center">
					<div class="text-6xl font-bold text-white counter" data-target="30">
						0
					</div>
					<span class="text-primary font-bold text-xl">Años de experiencia</span
					>
				</div>
				<div class="flex flex-col items-center">
					<div class="text-6xl font-bold text-white counter" data-target="1500">
						0
					</div>
					<span class="text-primary font-bold text-xl">Familias felices</span>
				</div>
				<div class="flex flex-col items-center">
					<div class="text-6xl font-bold text-white counter" data-target="3000">
						0
					</div>
					<span class="text-primary font-bold text-xl">Padres satisfechos</span>
				</div>
				<div class="flex flex-col items-center">
					<div class="text-6xl font-bold text-white counter" data-target="10">
						0
					</div>
					<span class="text-primary font-bold text-xl"
						>Empresas colaboradoras</span
					>
				</div>
			</div>
		</section>

		<section
			class="container mx-auto px-6 py-24 grid md:grid-cols-2 gap-8 max-w-7xl"
		>
			<div class="bg-[#b8dfec] rounded-3xl shadow p-12" data-aos="fade-up">
				<h3 class="text-6xl font-bold text-primary mb-8">Nuestra Misión</h3>
				<p class="text-primary text-xl">
					<span class="font-bold"
						>Promover el desarrollo del aprendizaje y la creatividad</span
					> desde la infancia, siendo pioneros de metodologías y prácticas pedagógicas,
					innovadoras e integrales, que resulten accesibles y beneficiosas para las
					personas.
				</p>
			</div>
			<div class="bg-[#fce36c] rounded-3xl shadow p-12" data-aos="fade-up">
				<h3 class="text-6xl font-bold text-primary mb-8">Nuestra Visión</h3>
				<p class="text-primary text-xl">
					Ser uno de los <span class="font-bold"
						>mayores referentes de educación infantil</span
					>, reconocida por sentar las bases de nuevos modelos educativos
					capaces de formar en los niños mentes ágiles y creativas, además de
					expandir nuestra propuesta educativa en un corto plazo de tiempo a más
					zonas de Lima y el Perú.
				</p>
			</div>
		</section>

		<section class="container mx-auto px-4 py-12 max-w-7xl" data-aos="fade-up">
			<div class="space-y-4">
				<h3
					class="text-2xl md:text-3xl uppercase text-center text-accent"
					data-aos="fade-up"
				>
					Lo que nos distingue
				</h3>
				<h2
					class="text-4xl md:text-6xl font-bold text-center text-primary"
					data-aos="fade-up"
				>
					Nuestro Core de Diferenciación
				</h2>
				<p
					class="text-center text-lg text-primary"
					data-aos="fade-up"
					data-aos-delay="200"
				>
					En Nido Perulina, impulsamos una educación innovadora que potencia el
					talento y la creatividad desde los primeros años.
				</p>
			</div>
			<div class="flex flex-col md:flex-row gap-8 mt-16 items-center">
				<img
					src="https://i.ibb.co/jPLGhBjG/Dise-os-Perulina.png"
					alt="Niños jugando"
					class="rounded-2xl"
					width={600}
					height={600}
				/>

				<div class="grid md:grid-cols-2 grid-cols-1 md:gap-5 gap-12 px-2">
					<div
						class="flex flex-col items-center"
						data-aos="fade-up"
						data-aos-delay="100"
					>
						<Image
							src="https://img.icons8.com/?size=200&id=24730&format=png&color=000000"
							alt="Excelencia"
							width={80}
							height={80}
							class="bg-blue-100 rounded-full p-5"
						/>
						<h4 class="font-bold text-4xl text-primary">Excelencia</h4>
						<p class="text-center text-secondary">
							Educación de alta calidad, personalizada y centrada en el
							desarrollo integral.
						</p>
					</div>
					<div
						class="flex flex-col items-center"
						data-aos="fade-up"
						data-aos-delay="200"
					>
						<Image
							src="https://img.icons8.com/?size=100&id=79142&format=png&color=000000"
							alt="Innovación"
							width={80}
							height={80}
							class="bg-orange-100 rounded-full p-5"
						/>
						<h4 class="font-bold text-4xl text-primary">Innovación</h4>
						<p class="text-center text-secondary">
							Metodología exclusiva "PRODIGIE" que estimula el aprendizaje ágil
							y creativo.
						</p>
					</div>
					<div
						class="flex flex-col items-center"
						data-aos="fade-up"
						data-aos-delay="300"
					>
						<Image
							src="https://img.icons8.com/?size=100&id=36728&format=png&color=000000"
							alt="Integridad"
							width={80}
							height={80}
							class="bg-yellow-100 rounded-full p-5"
						/>
						<h4 class="font-bold text-4xl text-primary">Integralidad</h4>
						<p class="text-center text-secondary">
							Desarrollo emocional, cognitivo y psicomotor en armonía.
						</p>
					</div>
					<div
						class="flex flex-col items-center"
						data-aos="fade-up"
						data-aos-delay="400"
					>
						<Image
							src="https://img.icons8.com/?size=100&id=BWTtWf1TESVQ&format=png&color=000000"
							alt="Accesibilidad"
							width={80}
							height={80}
							class="bg-green-100 rounded-full p-5"
						/>
						<h4 class="font-bold text-4xl text-primary">Accesibilidad</h4>
						<p class="text-center text-secondary">
							Educación de calidad al alcance de más familias, sin importar su
							situación.
						</p>
					</div>
				</div>
			</div>
		</section>

		<section class="container mx-auto py-24 bg-base-100 max-w-7xl">
			<div class="hero min-h-[600px]">
				<div class="hero-content flex-col lg:flex-row-reverse gap-12">
					<div class="lg:w-1/2 w-full" data-aos="fade-up">
						<Image
							src="https://i.ibb.co/dJHWg1LM/Miss-Gisella.jpg"
							alt="Directora del centro educativo"
							width={600}
							height={800}
							class="rounded-2xl shadow-2xl w-full md:h-[600px] h-[300px] object-cover object-top"
						/>
					</div>
					<div class="lg:w-1/2" data-aos="fade-up">
						<h2 class="text-4xl md:text-5xl font-bold text-primary mb-2">
							Palabras de la Directora
						</h2>
						<div class="divider"></div>
						<div class="prose max-w-none">
							<p class="text-lg mb-6 italic">
								"En Nido Perulina, creemos en el potencial ilimitado de cada
								niño. Nuestra misión es nutrir ese potencial a través de una
								educación integral que combine excelencia académica con
								desarrollo emocional y social."
							</p>
							<p class="mb-6">
								Con más de 15 años de experiencia en educación infantil, he
								tenido el privilegio de ver crecer y desarrollarse a cientos de
								niños. Cada sonrisa, cada descubrimiento y cada pequeño logro
								reafirma nuestra dedicación a la excelencia educativa.
							</p>
						</div>
						<div
							class="stats stats-vertical lg:stats-horizontal shadow mt-8 grid grid-cols-2 md:grid-cols-3"
						>
							<div class="stat">
								<div class="stat-value">15+</div>
								<div class="stat-title">Años de experiencia</div>
								<div class="stat-desc">en educación</div>
							</div>
							<div class="stat">
								<div class="stat-value">12</div>
								<div class="stat-title">Certificaciones</div>
								<div class="stat-desc">internacionales</div>
							</div>
							<div class="stat">
								<div class="stat-value">8</div>
								<div class="stat-title">Reconocimientos y</div>
								<div class="stat-desc">premios educativos</div>
							</div>
						</div>
						<div class="mt-8 text-center md:text-up">
							<h3 class="text-xl font-bold mb-2">Dra. Ada Gisela Tello</h3>
							<p class="text-accent">Directora General - Nido Perulina</p>
						</div>
					</div>
				</div>
			</div>
		</section>

		<TeachersSection />
		<AwardsSection />

		<!-- CTA Section -->
		<CTASection />
		<Footer />
		<GoogleTagManagerNoScript />
		<script
			type="text/javascript"
			id="hs-script-loader"
			async
			defer
			src="//js-na1.hs-scripts.com/50255506.js"></script>
	</body><script>
		import { gsap } from "gsap";
		import { ScrollTrigger } from "gsap/ScrollTrigger";

		gsap.registerPlugin(ScrollTrigger);

		// Counter animation function
		const animateCounter = (element: HTMLElement) => {
			const target = parseInt(element.getAttribute("data-target") || "0");

			gsap.fromTo(
				element,
				{ innerText: "0" },
				{
					innerText: target,
					duration: 2,
					ease: "power2.out",
					snap: { innerText: 10 },
					scrollTrigger: {
						trigger: element,
						start: "top 80%",
					},
					onUpdate: function () {
						element.innerText = Math.floor(Number(element.innerText)) + "+";
					},
				},
			);
		};

		// Animate all counters when they come into view
		document.querySelectorAll(".counter").forEach((counter) => {
			animateCounter(counter as HTMLElement);
		});
	</script>
</html>
